<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sms_gateway_view_form" model="ir.ui.view">
        <field name="name">sms.gateway.view.form</field>
        <field name="model">sms.gateway</field>
        <field name="arch" type="xml">
            <form string="SMS Gateway">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="bearer_token" required="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sms_gateway_view_tree" model="ir.ui.view">
        <field name="name">sms.gateway.view.list</field>
        <field name="model">sms.gateway</field>
        <field name="arch" type="xml">
            <list string="SMS Gateway">
                <field name="name"/>
                <field name="bearer_token"/>
            </list>
        </field>
    </record>

    <record id="sms_gateway_action" model="ir.actions.act_window">
        <field name="name">SMS Gateway</field>
        <field name="res_model">sms.gateway</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
