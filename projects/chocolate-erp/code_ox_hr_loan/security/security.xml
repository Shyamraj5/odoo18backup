<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <record id="employee_loan_personal_rule" model="ir.rule">
        <field name="name">Personal Loan</field>
        <field ref="model_employee_loan" name="model_id"/>
        <field name="domain_force">['|',('employee_id.user_id','=',user.id),('employee_id.user_id','=',False)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="employee_loan_see_all" model="ir.rule">
        <field name="name">All Loan</field>
        <field ref="model_employee_loan" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
    </record>
</odoo>