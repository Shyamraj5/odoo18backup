<odoo>
    <record id="customer_address_addition_wizard_view_form" model="ir.ui.view">
        <field name="name">customer.address.addition.wizard.view.form</field>
        <field name="model">customer.address.addition.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" string="Address Type" placeholder="e.g. Office, Home, etc" required="1"/>
                            <field name="is_default_address" force_save="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="house_number" required="1"/>
                            <field name="street"  string="Street" required="1" options="{'no_create':True,'no_open':True,'no_edit':True}"/>
                            <field name="floor_number"/>
                            <field name="zip"/>
                            <field name="city_id" required="1" options="{'no_create':True,'no_open':True,'no_edit':True}"/>
                            <field name="district_id" required="1" options="{'no_create':True,'no_open':True,'no_edit':True}"/>
                            <field name="route" required="1" options="{'no_create':True,'no_open':True,'no_edit':True}" domain="[('district_id', '=', district_id)]"/>
                            <field name="apartment_no"/>
                            <field name="partner_latitude" string="Latitude" groups="diet.group_edit_customer_lat_long"/>
                            <field name="partner_longitude" string="Longitude" groups="diet.group_edit_customer_lat_long"/>
                        </group>
                        <group>
                            <field name="delivery_time"/>
                            <field name="shift_id" options="{'no_create':True,'no_open':True,'no_edit':True}"/>
                            <field name="comments"/>
                            <field name="customer_id" invisible="1"/>
                            <field name="zone_id" invisible="1"/>
                            <field name="is_edit" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="add" string="Add" type="object" class="oe_highlight" invisible="is_edit"/>
                    <button name="submit" string="Submit" type="object" class="oe_highlight" invisible="not is_edit"/>
                    <button name="delete" string="Delete" type="object" class="oe_highlight" invisible="not is_edit"/>
                    <button name="cancel" special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="customer_address_addition_wizard_action" model="ir.actions.act_window">
        <field name="name">Address</field>
        <field name="res_model">customer.address.addition.wizard</field>
        <field name="view_mode">form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
</odoo>