<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_payment_form_inherit_reference" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.reference</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_bank_id']" position="after">
                <field name="ref_date" readonly="state != 'draft'"/>
                <field name="remarks" readonly="state != 'draft'"/>
            </xpath>
            <xpath expr="//field[@name='partner_id'][2]" position="after">
                <field name="vendor_code" string="Vendor Code" invisible="partner_type != 'supplier'"/>
                <field name="customer_code" string="Customer Code" invisible="partner_type == 'supplier'"/>
            </xpath>
        </field>
    </record>

    <!-- Add fields to the tree view as well -->
    <record id="view_account_payment_tree_inherit_reference" model="ir.ui.view">
        <field name="name">account.payment.tree.inherit.reference</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_signed']" position="after">
                <field name="ref_date" readonly="state != 'draft'"/>
                <field name="remarks" readonly="state != 'draft'"/>
            </xpath>
        </field>
    </record>

      <record id="account.menu_action_account_payments_receivable" model="ir.ui.menu">
            <field name="name">Customer Payments</field>
            <field name="parent_id" ref="account.menu_finance"/> 
        </record>

        <record id="account.menu_action_account_payments_payable" model="ir.ui.menu">
            <field name="name">Vendor Payments</field>
            <field name="parent_id" ref="account.menu_finance"/> 
        </record>

</odoo>
