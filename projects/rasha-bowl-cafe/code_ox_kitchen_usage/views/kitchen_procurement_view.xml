<odoo>
	<data>
        <record id="view_kitchen_procurement_list" model="ir.ui.view">
			<field name="name">kitchen.procurement.list</field>
			<field name="model">kitchen.procurement</field>
			<field name="arch" type="xml">
				<list string="Kitchen Procurement"  editable="bottom">
					<field name="product_id" options="{'no_create': True}"/>
					<field name="location_id"/>
					<field name="qty_on_hand" readonly="1"/>
					<field name="qty_to_order" column_invisible="1"/>
					<field name="product_min_qty" />
					<field name="product_max_qty" column_invisible="1"/>
					<field name="product_uom_id" force_save="1" readonly="1"/>
				</list>
			</field>
		</record>

        <record id="action_kitchen_procurement_list" model="ir.actions.act_window">
			<field name="name">Kitchen Procurement</field>
			<field name="res_model">kitchen.procurement</field>
			<field name="view_mode">list</field>
			<field name="view_id" ref="view_kitchen_procurement_list"/>
		</record>

        <menuitem id="kitchen" name="Kitchen Replenishment" parent="stock.menu_stock_procurement"
        action="action_kitchen_procurement_list"/>
	</data>
</odoo>