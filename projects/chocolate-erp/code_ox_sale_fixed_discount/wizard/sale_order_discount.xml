<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_discount_inherit" model="ir.ui.view">
            <field name="name">sale.order.discount.view.form.inherit</field>
            <field name="model">sale.order.discount</field>
            <field name="inherit_id" ref="sale.sale_order_line_wizard_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='discount_amount']" position="attributes">
                    <attribute name="invisible">discount_type not in ['sol_fixed_discount', 'amount']</attribute>
                </xpath>
                <xpath expr="//label[@for='discount_amount']" position="attributes">
                    <attribute name="invisible">discount_type not in ['sol_fixed_discount', 'amount']</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
