<?xml version="1.0" encoding="utf-8"?>
<odoo>

    

        <record id="customer_so_wizard_view_form" model="ir.ui.view">
            <field name="name">customer.so.wizard.view.form</field>
            <field name="model">customer.so.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <style>
                    [data-name="add_meal"] {
                        max-width: 24px !important;
                    }
                    [data-name="remove_meal"] {
                        max-width: 24px !important;
                    }
                    </style>
                    <group>
                        <group name="plan_details" string="Plan">
                            <field name="partner_id" force_save="1" invisible="1"/>
                            <field name="plan_category_id" force_save="1" required="1"/>
                            <field name="plan_id" force_save="1" required="1"/>
                            <field name="start_date" invisible="1" force_save="1"/>
                            <field name="actual_start_date" force_save="1"/>
                            <field name="end_date" force_save="1"/>
                        </group>
                        <!-- <group name="choice_details" string="Choice">
                            <field name="choice_id" force_save="1" required="0"/>
                            <field name="choice_ids" invisible="1" force_save="1"/>
                        </group> -->
                        <group>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="meals_details" string="Meals" invisible="not plan_id">
                            <field name="meal_line_ids" force_save="1">
                                <list>
                                    <field name="customer_so_id" invisible="1"/>
                                    <field name="meal_category_id"/>
                                    <!-- <field name="count"/>
                                    <button name="add_meal" type="object" warn="0" string="Add" icon="fa-plus"/>
                                    <button name="remove_meal" type="object" warn="0" string="Remove" icon="fa-minus"/> -->
                                </list>
                            </field>
                            <group>
                                <group class="oe_subtotal_footer oe_right" colspan="2">
                                    <!-- <field name="plan_base_price" readonly="1"/>
                                    <field name="addons_price" readonly="1"/> -->
                                    <field name="total_price" readonly="1" string="Price"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                    <footer>
                        <div>
                            <button
                                name="confirm"
                                string="Confirm"
                                type="object"
                                class="btn-primary"
                            />
                            <button
                                string="Cancel"
                                class="btn btn-default"
                                special="cancel"
                            />
                        </div>
                    </footer>
                </form>
            </field>
        </record>

        <record id="customer_so_wizard_action" model="ir.actions.act_window">
            <field name="name">Sale Order</field>
            <field name="res_model">customer.so.wizard</field>
            <field name="view_mode">form</field>
        </record>

</odoo>
