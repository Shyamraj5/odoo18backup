<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="kitchen_report_wizard_view" model="ir.ui.view">
        <field name="name">customer.kitchen.report.wizard.view</field>
        <field name="model">customer.kitchen.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Customers Daily Report Wizard">
                <group>
                    <group>
                        <field name="date"/>
                        <field name="plan_category_id"/>
                    </group>
                    <group>
                        <field name="meal_category_id"/>
                    </group>
                </group>
                <footer>
                    <button name="print_pdf" string="Export PDF" type="object" class="btn-primary"/>
                    <button name="print_excel" string="Export Excel" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_customer_daily_meal_report_wizard" model="ir.actions.act_window">
        <field name="name">Customers Daily Report</field>
        <field name="res_model">customer.kitchen.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>