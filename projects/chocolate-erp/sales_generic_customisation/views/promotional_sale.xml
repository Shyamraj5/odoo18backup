<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_promotional_sale_orders" model="ir.actions.act_window">
        <field name="name">Promotional Sales Orders</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">list,kanban,form,calendar,pivot,graph,activity</field>
        <field name="search_view_id" ref="sale.sale_order_view_search_inherit_sale"/>
        <field name="context">{'default_promotional_sale': True}</field>
        <field name="domain">[('state', '!=', 'cancel'), ('promotional_sale', '=', True)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new quotation, the first step of a new sale!
            </p><p>
                Once the quotation is confirmed, it becomes a sales order.<br/> You will be able to create an invoice and collect the payment.
            </p>
        </field>
    </record>

    <menuitem
        id="promotional_sale_menu"
        name="Promotional Sale"
        action="action_promotional_sale_orders"
        groups="sales_team.group_sale_salesman"
        parent="sale.sale_order_menu"
        sequence="20"/>
</odoo>
