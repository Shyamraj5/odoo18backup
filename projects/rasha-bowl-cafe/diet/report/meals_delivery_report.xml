<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="meals_delivery_report_paperformat" model="report.paperformat">
        <field name="name">Meals Delivery Report</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">8</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">5</field>
        <field name="dpi">100</field>
    </record>

    <template id="meals_delivery_report_header">
        <div class="header">
            <div class="row">
                <div class="col-4">
                    <span>Delivery Report : <t t-esc="data['date']"/></span>
                </div>
                <div class="col-4" style="text-align:center;">
                    <span># means selected by user</span>
                </div>
                <div class="col-4" style="text-align:right;">
                    <span>Page: <span class="page"/></span>
                </div>
            </div>            
        </div>
        <div class="article">
            <t t-raw="0"/>
        </div>
        <div class="footer">
        </div>
    </template>

    <template id="meals_delivery_report">
        <t t-call="web.html_container">
            <t t-call="diet.meals_delivery_report_header">
                <div class="page">
                    <table width="100%">
                        <tr>
                            <td width="10%"></td>
                            <td width="10%"></td>
                            <td width="40%"></td>
                            <td width="40%"></td>
                        </tr>
                        <t t-set="slno" t-value="1"/>
                        <t t-foreach="report_data" t-as="rd">
                            <tr style="border: 1px solid black; border-collapse: collapse;">
                                <td style="border: 1px solid black; border-collapse: collapse; padding:4px; text-align:center; color: white; background-color: black;">
                                    <span>Q#<t t-esc="rd['queue_number']"/></span>    
                                </td>
                                <td colspan="2" style="border: 1px solid black; border-collapse: collapse; padding:4px;">
                                    <span><t t-esc="rd['name']"/></span>
                                    <t t-if="rd['customer_no']">
                                        <span> ( <t t-esc="rd['customer_no']"/> )</span>
                                    </t>
                                    <t t-if="rd['category']">
                                        <span> ( <t t-esc="rd['category']"/> )</span>
                                    </t>
                                </td>
                                <td style="border: 1px solid black; border-collapse: collapse; padding:4px; background-color: #ababab;">
                                    <span><t t-esc="rd['plan_name']"/></span>
                                </td>
                            </tr>
                            <t t-if="data['report_type'] != 'delivery_report_without_dislikes'">
                                <tr style="border: 1px solid black; border-collapse: collapse;">
                                    <td colspan="4" style="border: 1px solid black; border-collapse: collapse; padding:4px;">
                                        <span>Dislikes: <t t-esc="rd['customer_dislikes']"/></span>
                                    </td>
                                </tr>
                            </t>
                            <t t-foreach="rd['meals_data']" t-as="md">
                                <tr style="border: 1px solid black; border-collapse: collapse;">
                                    <td colspan="2" style="border: 1px solid black; border-collapse: collapse; padding:4px; background-color: #cccccc;">
                                        <span><t t-esc="md"/></span>
                                    </td>
                                    <t t-if="'No' in rd['meals_data'][md]['meals']">
                                        <td colspan="2" style="border: 1px solid black; border-collapse: collapse; padding:4px; color: white; background-color: #333333;">
                                            <span><t t-esc="rd['meals_data'][md]['meals']"/></span>
                                        </td>
                                    </t>
                                    <t t-else="">
                                        <td colspan="2" style="border: 1px solid black; border-collapse: collapse; padding:4px; background-color: #dedede;">
                                            <span><t t-esc="rd['meals_data'][md]['meals']"/></span>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                            <t t-set="slno" t-value="slno+1"/>
                        </t>
                    </table>
                </div>
            </t>
        </t>
    </template>

    <record id="meals_delivery_report_action" model="ir.actions.report">
        <field name="name">Meals Delivery Report</field>
        <field name="model">delivery.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">diet.meals_delivery_report</field>
        <field name="report_file">diet.meals_delivery_report</field>
        <field name="print_report_name">'Delivery Report'</field>
        <field name="paperformat_id" ref="diet.meals_delivery_report_paperformat"/>
    </record>

</odoo>
