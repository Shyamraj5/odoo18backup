<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="customer_account_deletion_view_tree" model="ir.ui.view">
        <field name="name">customer.account.deletion.view.list</field>
        <field name="model">customer.account.deletion.request</field>
        <field name="arch" type="xml">
            <list string="Customer Account Deletion Request">
                <field name="name" />
                <field name="customer_id" />
                <field name="request_datetime" />
                <field name="state" />
            </list>
        </field>
    </record>

    <record id="customer_account_deletion_view_form" model="ir.ui.view">
        <field name="name">customer.account.deletion.view.form</field>
        <field name="model">customer.account.deletion.request</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,deleted"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1" force_save="1"/>
                            <field name="customer_id" readonly="1" force_save="1"/>
                            <field name="request_datetime" readonly="1" force_save="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="customer_account_deletion_action" model="ir.actions.act_window">
        <field name="name">Customer Account Deletion Request</field>
        <field name="res_model">customer.account.deletion.request</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
