<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_payment_inherit_approval" model="ir.ui.view">
        <field name="name">account.payment.view.form.approval</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="payment_approval" required="1" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                <field name="is_all_approved" invisible="1"/>
            </xpath>
            <xpath expr="//button[@name='action_post']" position="attributes">
                <attribute name="invisible">not is_all_approved or state != 'draft'</attribute>
            </xpath>
            <xpath expr="//button[@name='action_post']" position="after">
                <button name="action_approve_line"
                        string="Approve"
                        type="object"
                        class="oe_highlight"
                        invisible="state != 'draft' or is_all_approved"/>
                <button name="action_reject_line"
                        string="Reject"
                        type="object"
                        class="oe_highlight"
                        invisible="state != 'draft' or is_all_approved"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_payment_form_inherited_approval" model="ir.ui.view">
        <field name="name">account.payment.view.form.approval</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="codeox_multi_invoice_payment.view_account_payment_form_inherited"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[last()]" position="after">
                    <page string="Approval Route">
                        <field name="approval_route_ids" force_save="1" readonly="1"> 
                            <list editable="bottom">
                                <field name="user_id" force_save="1" readonly="1"/>
                                <field name="state" force_save="1" readonly="1"/>
                            </list>
                        </field>
                    </page>
            </xpath>
        </field>
    </record>
</odoo>