        <record id="meal_view_calendar" model="ir.ui.view">
            <field name="name">meal.view.calendar</field>
            <field name="model">customer.meal.calendar</field>
            <field name="arch" type="xml">
                <calendar date_start="date" string="Meal Calendar" color="calendar_color_state" mode="month" >
                      <field name="partner_id"/>
                      <field name="day"/>
                      <field name="meal_category_id"/>
                      <field name="meal_id"/>
                      <field name="calendar_color_state" invisible="1"/>
                      <field name="meal_selection_by"/>
                </calendar>
            </field>
         </record>
        

    <record id="customer_meal_calendar_action" model="ir.actions.act_window">
        <field name="name">Meal Calendar</field>
        <field name="res_model">customer.meal.calendar</field>
        <field name="view_mode">list,calendar,kanban,form</field>
        <field name="context">{'search_default_group_by_partner':1,'search_default_group_by_date':1,'search_default_group_by_category':1}</field>
    </record>

