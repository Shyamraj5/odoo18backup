<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_conf_subscription_plan" model="ir.actions.act_window">
        <field name="name">Subscription Plan</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">subscription.package.plan</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{
            'search_default_filter_group_plan_category': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new subscription plan !
            </p>
        </field>
    </record>
    <record id='view_subscription_plan__kanban' model='ir.ui.view'>
        <field name="name">Subscription kanban</field>
        <field name="model">subscription.package.plan</field>
        <field name="arch" type="xml">
            <kanban default_order="sequence">
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <field name="image" widget="image" class="oe_avatar"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                            </div>
                        </div>    
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="subscription_plan_tree" model="ir.ui.view">
        <field name="name">subscription.package.plan.list</field>
        <field name="model">subscription.package.plan</field>
        <field name="arch" type="xml">
            <list multi_edit="1">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="plan_category_id"/>
                <field name="company_id"/>
                <field name="short_code"/>
            </list>
        </field>
    </record>

    <record id="subscription_plan_form" model="ir.ui.view">
        <field name="name">subscription.package.plan.form</field>
        <field name="model">subscription.package.plan</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="generate_recipe" string="Generate Recipe" type="object" class="oe_highlight" invisible="1"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="button_product_count" type="object"
                                class="oe_stat_button" icon="fa-shopping-cart" invisible="1">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="product_count"/>
                                </span>
                                <span class="o_stat_text">
                                    Products
                                </span>
                            </div>
                        </button>
                        <button name="button_sub_count" class="oe_stat_button"
                                icon="fa-book" type="object">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="subscription_count"/>
                                </span>
                                <span class="o_stat_text">
                                    Subscriptions
                                </span>
                            </div>
                        </button>
                        <button name="service_product" class="oe_stat_button"
                                icon="fa-money" type="object" >
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">
                                    Service Product
                                </span>
                            </div>
                        </button>
                        <!-- plan choice button is commended for future use -->
                        <!-- <button name="plan_choice" class="oe_stat_button"
                                icon="fa-bars" type="object" >
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="plan_choice_count"/>
                                </span>
                                <span class="o_stat_text">
                                    Plan Choice
                                </span>
                            </div>
                        </button> -->
                        <button name="view_choices" type="object" class="oe_stat_button" icon="fa-file" invisible="1">
                            <field name="choice_count" string="Choices" widget="statinfo"/>
                        </button>
                    </div>
                    <field name="image" widget='image' class="oe_avatar"/>
                    <group>
                        <group>
                            <field name="name" placeholder="e.g. Yearly Subscription"/>
                            <field name="short_code"  required="1"/>
                        </group>
                    </group>
                    <!-- <group name="ramdan_plan_config">
                        <field name="is_ramdan_plan"/>
                        <field name="ramdan_plan_id" domain="[('is_ramdan_plan', '=', True)]" options="{'no_create': 1, 'no_create_edit': 1}" invisible="is_ramdan_plan"/>
                        <field name="inverse_plan_id" domain="[('is_ramdan_plan', '=', False)]" options="{'no_create': 1, 'no_create_edit': 1}" invisible="not is_ramdan_plan"/>
                    </group> -->
                    <group>
                        <group>
                            <field name="description" placeholder="Description"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <!-- <label for="start_date" string="Duration" invisible="1"/> -->
                            <!-- <div class="o_row">
                                <field name="duration_days"/>
                                <field name="start_date" class="oe_inline" placeholder="Date From" invisible="1"/>
                                <span class="oe_inline"> - </span>
                                <field name="end_date" class="oe_inline" placeholder="Date To" invisible="1"/>
                            </div> -->
                            <!-- <field name="duration_days" required="1"/> -->
                            <!-- <field name="plan_category_id" required="1"/> -->
                            <!-- <field name="currency_id" invisible="1"/> -->
                        </group>
                        <group>
                            <field name="next_plan_id" invisible="1"/>
                            <field name="plan_price" invisible="1"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="protein" string="Protein" invisible="1"/>
                            <field name="carbohydrates" string="Carbs" invisible="1"/>
                        </group>
                        <group>
                            <field name="calories" string="Calories" force_save="1" invisible="1"/>
                        </group>
                    </group>
                    <label string="Meal Count" for="meal_config_ids"/>
                    <field name="meal_config_ids">
                        <list editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="meal_category_config_id" column_invisible="True"/>
                            <field name="meal_category_id" force_save="1"/>
                            <field name="meal_count"/>
                            <field name="additional_price" string="Price/Day" invisible="1"/>
                            <field name="calorie_multiply_factor"/>
                            <field name="plan_default_meal_id" column_invisible="1" force_save="1"/>
                            <button title="Edit Default Meals" string="Edit Default Meals" icon="fa-pencil" name="open_default_meals" type="object" class="oe_highlight"/>
                        </list>
                    </field>
                    <label string="Additional Meal Count" for="additional_meal_config_ids"/>
                    <field name="additional_meal_config_ids">
                        <list editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="additional_meal_category_config_id" column_invisible="True"/>
                            <field name="meal_category_id" force_save="1"/>
                            <field name="meal_count" column_invisible="1"/>
                            <field name="additional_price" column_invisible="1"/>
                            <field name="calorie_multiply_factor"/>
                            <field name="plan_default_meal_id" column_invisible="1" force_save="1"/>
                            <button title="Edit Default Meals" string="Edit Default Meals" icon="fa-pencil" name="open_default_meals" type="object" class="oe_highlight"/>
                        </list>
                    </field>
                    <group>
                        <group>
                            <field name="start_date" />
                        </group>
                    </group>
                    <label string="Days Choices" for="day_choice_ids"/>
                    <field name="day_choice_ids">
                        <list>
                                <field name="show_order" widget="handle"/>
                                <field name="name"/>
                                <field name="duration_type"/>
                                <field name="choices"/>
                                <field name="no_of_day"/>
                                <field name="currency_id" column_invisible="1"/>
                                <field name="plan_price" column_invisible="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="plan_tax_amount" column_invisible="1" widget="monetary" options="{'currency_field': 'currency_id'}" />
                                <field name="strike_through_price" column_invisible="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="days"/>
                        </list>
                    </field>
                    <group id="conditions" string="Invoicing Conditions" groups="base.group_no_one" invisible="1">
                        <group id="invoicing_left">
                            <field name="journal_id"/>
                        </group>
                        <group id="invoicing_right">
                            <field name="company_id"/>
                        </group>
                    </group>
                    <notebook invisible ="1">
                        <page name="available_meals" string="Available Meals">
                            <field name="plan_meal_ids">
                                <list editable="bottom">
                                    <field name="meal_category_id" />
                                    <field name="protein"/>
                                    <field name="carbohydrates"/>
                                    <field name="default_count" string="Count" invisible="1"/>
                                    <button string="Configure" name="open_weekly_meal_configuration" type="object" class="oe_highlight"/>
                                </list>
                            </field>
                        </page>
                        <page name="terms" string="Terms &amp; Conditions" invisible="1">
                            <field name="terms_and_conditions"
                               placeholder="Terms and conditions."/>
                        </page>
                    </notebook>                    
                </sheet>
                <chatter reload_on_follower="True"/>
            </form>
        </field>
    </record>

    <record id="subscription_package_plan_view_search" model="ir.ui.view">
        <field name="name">subscription.package.plan.view.search</field>
        <field name="model">subscription.package.plan</field>
        <field name="arch" type="xml">
            <search>
                <filter name="group_plan_category" string="Plan Category" context="{'group_by': 'plan_category_id'}" />
                <filter name="ramdan_plan" string="Ramdan Plan" domain="[('is_ramdan_plan', '=', True)]" />
                <filter name="ramdan_plan_group" string="Ramdan Plan" context="{'group_by': 'is_ramdan_plan'}" />
                <filter string="Archived" name="active" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

</odoo>
