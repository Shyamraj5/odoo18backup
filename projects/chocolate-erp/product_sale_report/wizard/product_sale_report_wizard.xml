<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_sale_report_wizard_form" model="ir.ui.view">
        <field name="name">product.sale.report.wizard.form</field>
        <field name="model">product.sale.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Sale Report">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button name="generate_xlsx_report" string="Generate Report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_product_sale_report_wizard" model="ir.actions.act_window">
        <field name="name">Sale Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.sale.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_product_sale_report"
              name=" Product Sale Report"
              action="action_product_sale_report_wizard"
              parent="sale.menu_sale_report"
              sequence="20"/>
</odoo>