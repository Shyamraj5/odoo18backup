<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="view_stock_in_out_wizard_form" model="ir.ui.view">
        <field name="name">stock.in.out.wizard</field>
        <field name="model">stock.in.out.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Inventory Stock In Out Report">
                <group>
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <group>
                        <field name="product_ids" widget="many2many_tags" options="{'no_create_edit': True,'no_create': True, 'no_quick_create': True}"/>
                        <field name="lot_ids" widget="many2many_tags" options="{'no_create_edit': True,'no_create': True, 'no_quick_create': True}"/>
                    </group>
                </group>
                <footer>
                    <button string="Generate Report" type="object" name="generate_report" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_stock_in_out_wizard" model="ir.actions.act_window">
        <field name="name">Inventory Stock In Out Report</field>
        <field name="res_model">stock.in.out.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_reporting_inventory_stock_report"
              name="Inventory Stock In Out"
              parent="stock.menu_warehouse_report"
              action="action_stock_in_out_wizard"
              sequence="51"/>

</odoo>
