<odoo>
    <data>
        <record id="view_invoice_custom" model="ir.ui.view">
            <field name="name">account.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="code_ox_account_generic_customisation.account_move_inherit_generic"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='customer_code']" position="after">
                    <field name="sale_type" invisible="move_type not in ('out_refund', 'out_invoice')"/>
                </xpath>
            </field>
        </record>

        <record id="view_invoice_lines_custom" model="ir.ui.view">
            <field name="name">account.move.form.line.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='price_subtotal']" position="before">
                    <field name="lot_id" optional="True" column_invisible="parent.move_type not in ('out_refund', 'out_invoice')"/>
                    <field name="expiration_date" optional="True" column_invisible="parent.move_type not in ('out_refund', 'out_invoice')"/>
                    <field name="margin" optional="True" column_invisible="parent.move_type not in ('out_refund', 'out_invoice')"/>
                    <field name="purchase_price" optional="True" column_invisible="parent.move_type not in ('out_refund', 'out_invoice')"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>