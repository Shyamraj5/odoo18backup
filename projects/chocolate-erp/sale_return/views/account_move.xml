<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_move_inherit_sale_return" model="ir.ui.view">
        <field name="name">account.move.inherit.sale.return</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
             <xpath expr="//header" position="inside">
                <button string="Create Return" name="create_return" type="object"
                       invisible="move_type  in ['in_invoice', 'in_refund', 'out_refund'] or (state != 'posted' and move_type == 'out_invoice')" />
            </xpath>
        </field>
    </record>

</odoo>



        