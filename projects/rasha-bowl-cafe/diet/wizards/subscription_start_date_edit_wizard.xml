<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="subscription_start_date_edit_wizard_view_form" model="ir.ui.view">
        <field name="name">subscription.start.date.edit.wizard.view.form</field>
        <field name="model">subscription.start.date.edit.wizard</field>
        <field name="arch" type="xml">
            <form string="Change Start Date">
                <sheet>
                    <group>
                        <group>
                            <field name="subscription_id" invisible="1" force_save="1"/>
                            <field name="start_date" string="Current Start Date" readonly="1" force_save="1"/>
                            <field name="new_start_date" string="New Start Date" required="1"/>
                        </group>
                        <group>
                            <field name="end_date" string="Current End Date" readonly="1" force_save="1"/>
                            <field name="new_end_date" string="New End Date" required="1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="update_start_date" string="Update" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
