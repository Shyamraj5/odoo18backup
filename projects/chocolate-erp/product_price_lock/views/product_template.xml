<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view_price_lock" model="ir.ui.view">
        <field name="name">product.template.form.price.lock</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='list_price']" position="after">
                <field name="is_price_locked"/>
                <button 
                    name="toggle_price_lock" 
                    type="object" 
                    string="ðŸ”’" 
                    help="Toggle Price Lock"
                    class="oe_inline oe_right"
                />
            </xpath>
        </field>
    </record>

     <record id="view_product_template_list_inherit" model="ir.ui.view">
        <field name="name">product.template.list.inherit.price.lock</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view" />
        <field name="arch" type="xml">
            <xpath expr="//list" position="inside">
                <field name="is_price_locked" />
            </xpath>
        </field>
    </record>
    
    <record id="action_product_template_lock_prices" model="ir.actions.server">
          <field name="name">Lock Prices</field>
          <field name="model_id" ref="product.model_product_template" />
          <field name="binding_model_id" ref="product.model_product_template" />
          <field name="state">code</field>
          <field name="code">
               action = env['product.product'].browse(env.context.get('active_ids')).lock_product_template_prices()
          </field>
    </record>
</odoo>
