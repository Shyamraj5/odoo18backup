<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="meals_category_form" model="ir.ui.view">
        <field name="name">meals.category.form</field>
        <field name="model">meals.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div>
                        <h1>
                            <field name="code"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="is_snack"/>
                            <field name="active" invisible="1"/>
                            <field name="show_pc_combination_in_report" />
                            <field name="is_ramdan" />
                        </group>
                        <group>
                            <field name="short_code" required="1"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="meals_category_tree" model="ir.ui.view">
        <field name="name">meals.category.list</field>
        <field name="model">meals.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="code"/>
                <field name="name"/>
                <field name="active"/>
                <!-- <field name="is_snack"/> -->
                <!-- <field name="color" widget="color_picker"/> -->
                
            </list>
        </field>
    </record>

    <record id="meals_category_search_view" model="ir.ui.view">
        <field name="name">meals.category.search</field>
        <field name="model">meals.category</field>
        <field name="arch" type="xml">
            <search>
                <filter string="Archived" name="active" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_meals_category" model="ir.actions.act_window">
        <field name="name">Meal Categories</field>
        <field name="res_model">meals.category</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Enter the Categories
            </p>
        </field>
    </record>
    
</odoo>