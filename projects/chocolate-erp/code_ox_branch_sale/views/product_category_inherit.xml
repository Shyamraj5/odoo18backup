<odoo>
    <record id="view_product_category_form_inherit_branch_account" model="ir.ui.view">
        <field name="name">product.category.form.inherit.branch.account</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='property_stock_account_output_categ_id']" position="after">
                <field name="branch_input_account_id" options="{'no_open': True, 'no_create_edit': True}"/>
                <field name="branch_output_account_id" options="{'no_open': True, 'no_create_edit': True}"/>
            </xpath>
        </field>
    </record>
</odoo>
