<?xml version="1.0" encoding="utf-8"?>
<odoo>
    

    <record id="customer_meal_calendar_view_kanban" model="ir.ui.view">
        <field name="name">customer.meal.calendar.view.kanban</field>
        <field name="model">customer.meal.calendar</field>
        <field name="arch" type="xml">
            <kanban default_group_by="weekday">
                <field name="date"/>
                <field name="day"/>
                <field name="weekday"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="oe_kanban_card">
                                    <div class="col-4" style="float:left">
                                        <div>
                                            <b>
                                                <h1><field name="day"/></h1>
                                            </b>
                                        </div>
                                        <div class="text-muted">
                                            <field name="date"/>
                                        </div>
                                    </div>
                                    <div class="col-8" style="float:right">
                                        <h4><field name="meal_category_id"/></h4>
                                        <field name="meal_id"/>
                                    </div>
                                </div>
                            </div>
                        </div>    
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="customer_meal_calendar_view_form" model="ir.ui.view">
        <field name="name">customer.meal.calendar.view.form</field>
        <field name="model">customer.meal.calendar</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="active,freezed,upgraded,off_day"/>
                </header>
                <sheet>
                    <field name="delivery_status" invisible="1"/>
                    <widget name="web_ribbon" title="Not Delivered" invisible="delivery_status != 'not_delivered'"/>
                    <widget name="web_ribbon" title="Delivered" invisible="delivery_status != 'delivered'"/>
                    <group>
                        <group>
                            <field name="date" readonly="1" force_save="1"/>
                            <field name="meal_category_id" readonly="1" force_save="1"/>
                            <field name="meal_id"/>
                            <field name="meal_selection_by"/>
                            <field name="reason" readonly="1" force_save="1"/>
                            <field name="shift_id"/>
                            <field name="address_id"/>
                            <field name="is_paid_day" invisible="1" force_save="1"/>
                        </group>
                        <group>
                            <field name="freezed_calendar_id" readonly="1" force_save="1" groups="base.group_no_one"/>
                        </group>
                    </group>
                </sheet>
                <chatter reload_on_follower="True"/>
            </form>
        </field>
    </record>

    <record id="customer_meal_calendar_view_tree" model="ir.ui.view">
        <field name="name">customer.meal.calendar.view.list</field>
        <field name="model">customer.meal.calendar</field>
        <field name="arch" type="xml">
        <list decoration-danger="state == 'freezed'" decoration-success="state == 'active'" decoration-primary="state == 'upgraded'">
            <field name="date"/>
            <field name="weekday"/>
            <field name="partner_id"/>
            <field name="meal_category_id"/>
            <field name="meal_id"/>
            <field name="meal_selection_by" />
            <field name="is_frozen" column_invisible="1"/>
            <field name="plan_category_id" column_invisible="1"/>
            <field name="state"/>
            <field name="reason"/>
        </list>
        </field>
    </record>

    <record id="customer_meal_calendar_search" model="ir.ui.view">
        <field name="name">customer.meal.calendar.search</field>
        <field name="model">customer.meal.calendar</field>
        <field name="arch" type="xml">
            <search>
                <filter name="system_selection" string="SYSTEM SELECTION" domain="[('meal_selection_by', '=', 'system')]" />
                <group expand="0" string="Group By">
                    <filter name="group_by_partner" string="Partner" context="{'group_by': 'partner_id'}"/>
                    <filter name="group_by_date" string="Date" context="{'group_by': 'date:day'}"/>
                    <filter name="group_by_category" string="Meal Category" context="{'group_by': 'meal_category_id'}"/>
                </group>
            </search>
        </field>
    </record>

