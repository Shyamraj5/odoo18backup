<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <data>
        <!-- Inheriting the stock.picking form view -->
        <record id="view_picking_form_inherit" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <!-- Adding the fields inside the 'Additional Info' page -->
                <xpath expr="//page[@name='extra']//field[@name='group_id']" position="after">
                    
                    <field name="delivery_priority_id"/>
                    <field name="delivery_description"/>
                    
                </xpath>
            </field>
        </record>
    </data>

</odoo>
