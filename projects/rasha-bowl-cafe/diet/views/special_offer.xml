<?xml version="1.0" encoding="utf-8"?>
<odoo>

    
    <record id="special_offer_tree" model="ir.ui.view">
        <field name="name">special.offer.list</field>
        <field name="model">special.offer</field>
        <field name="arch" type="xml">
            <list multi_edit="1">
                <field name="title"/>
                <field name="image"/>
                <field name="description"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </list>
        </field>
    </record>

    <record id="view_special_offer_form" model="ir.ui.view">
        <field name="name">special offer form</field>
        <field name="model">special.offer</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
                </header>
                <sheet>
                    <div class="oe_avatar">
                        <field name="image" widget="image" options="{'preview_image': 'image'}"/>
                    </div>
                    <group>
                        <group>
                            <field name="title"/>
                            <label for="start_date" string="Offer Period"/>
                            <div class="o_row">
                                <field name="start_date" placeholder="Start Date"/>
                                <span>-</span>
                                <field name="end_date" placeholder="End Date"/>
                            </div>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_special_offer" model="ir.actions.act_window">
        <field name="name">Special offer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">special.offer</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
