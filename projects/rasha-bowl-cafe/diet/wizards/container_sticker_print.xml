<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="container_sticker_wizard_view" model="ir.ui.view">
        <field name="name">container.sticker.wizard.view</field>
        <field name="model">container.sticker.wizard</field>
        <field name="arch" type="xml">
            <form string="Container Sticker Print Wizard">
                <group>
                    <group>
                        <field name="date"/>
                        <field name="plan_id"/>
                    </group>
                    <group>
                        <field name="meal_category_id"/>
                    </group>
                </group>
                <footer>
                    <button name="print_sticker" string="EXPORT PDF" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_container_sticker_wizard" model="ir.actions.act_window">
        <field name="name">Container Sticker</field>
        <field name="res_model">container.sticker.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>