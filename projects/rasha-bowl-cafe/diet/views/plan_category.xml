<?xml version = "1.0" encoding = "UTF-8"?>
<odoo>

    <record id="view_plan_category_form" model="ir.ui.view">
        <field name="name">Plan Category Form</field>
        <field name="model">plan.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image'}"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="plan_id" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="color" widget="color_picker"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="plan_category_search_view" model="ir.ui.view">
        <field name="name">plan.category.search</field>
        <field name="model">plan.category</field>
        <field name="arch" type="xml">
            <search>
                <filter string="Archived" name="active" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="view_plan_category_tree" model="ir.ui.view">
        <field name="name">Plan Category list</field>
        <field name="model">plan.category</field>
        <field name="arch" type="xml">
            <list multi_edit="1">
                 <field name="name"/>
                 <field name="plan_id" widget="many2many_tags"/>
                 <field name="color" widget="color_picker"/>
            </list>
        </field>
    </record> 

    <record id="action_plan_category" model="ir.actions.act_window">
        <field name="name">Plan Category</field>
        <field name="res_model">plan.category</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Enter the Plan Categories
            </p>
        </field>
    </record>

    <!-- <menuitem id="plan_category_main_menu"
        name="Plan Category"
        parent="diet.subscription_menu_root"
        action="action_plan_category"
        sequence="2"/> -->
</odoo>