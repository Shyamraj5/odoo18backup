<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="components_view_form" model="ir.ui.view">
            <field name="name">components.view.form</field>
            <field name="model">components</field>
            <field name="arch" type="xml">
                <form string="Components">
                    <sheet>
<!--                        <div class="oe_title">-->
<!--                            <label for="name" class="oe_edit_only" string="WA Template"/>-->
<!--                            <h1>-->
<!--                                <field name="name" required="1"/>-->
<!--                            </h1>-->
                            <group>
                                <field name="type"/>
                                <field name="formate" invisible="type == 'header'"/>
                                <field name="media_type" invisible="formate != 'media'"/>
                                <field name="text" invisible="formate == 'media'"/>
                                <field name="model_id" force_save = "1" invisible="1"/>
                            </group>
<!--                        </div>-->
                        <notebook>
                            <page string="Variables" name="variables">
                                <group>
                                    <field name="variables_ids" context="{'default_model_id':model_id}" invisible="formate == 'media'"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="components_view_list" model="ir.ui.view">
            <field name="name">components.view.list</field>
            <field name="model">components</field>
            <field name="arch" type="xml">
                <list string="Components">
                    <field name="type"/>
                    <field name="text"/>
                </list>
            </field>
        </record>

    </data>
</odoo>