<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="customer_wallet_type_form" model="ir.ui.view">
        <field name="name">customer.wallet.type</field>
        <field name="model">wallet.amount.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="is_refer"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="customer_wallet_type_tree" model="ir.ui.view">
        <field name="name">customer.wallet.type.list</field>
        <field name="model">wallet.amount.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="is_refer"/>
            </list>
        </field>
    </record>

    <record id="action_wallet_amount_type" model="ir.actions.act_window">
        <field name="name">Wallet Type</field>
        <field name="res_model">wallet.amount.type</field>
        <field name="view_mode">list,form</field>
    </record>
    
</odoo>