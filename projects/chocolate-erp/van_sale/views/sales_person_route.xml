<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_route_form" model="ir.ui.view">
        <field name="name">sales.route.form</field>
        <field name="model">route.route</field>
        <field name="arch" type="xml">
            <form class="form-horizontal">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>

                    <notebook>
                        <page name="sale_person_route" string="Shops">
                            <field name="shops_ids" mode="kanban">
                                <kanban>
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="mobile"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click">
                                                <div class="o_kanban_image">
                                                    <img t-att-src="kanban_image('res.users', 'image_128', record.id.raw_value)" 
                                                        alt="User Image" class="o_image_64_contain"/>
                                                </div>
                                                <div class="oe_kanban_details">
                                                    <div class="o_kanban_record_top mb-0">
                                                        <div class="o_kanban_record_headings">
                                                            <strong class="o_kanban_record_title">
                                                                <t t-esc="record.name.value"/>
                                                            </strong>
                                                        </div>
                                                        <div>
                                                            <t t-esc="record.email.value"/>
                                                        </div>
                                                        <div>
                                                            <t t-esc="record.email.mobile"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                                 
                            </field>
                        </page>

                    </notebook>
                </sheet>

            </form>
        </field>
    </record>

     <record id="view__route_list" model="ir.ui.view">
        <field name="name">route.route</field>
        <field name="model">route.route</field>
        <field name="arch" type="xml">
            <list string="Sales Person">
                <field name="name"/>
                <field name="shops_ids" widget="many2many_tags"/>
                  
            </list>
        </field>
    </record>



    <record id="route_route_action" model="ir.actions.act_window">
        <field name="name">Route</field>
        <field name="res_model">route.route</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>


    </record>
    

</odoo>
