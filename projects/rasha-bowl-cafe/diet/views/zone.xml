<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="customer_zone_form" model="ir.ui.view">
        <field name="name">customer.zone.form</field>
        <field name="model">customer.zone</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="driver_ids" widget="many2many_tags"/>
                            <field name="district_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="customer_zone_tree" model="ir.ui.view">
        <field name="name">customer.zone.list</field>
        <field name="model">customer.zone</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
                <field name="code"/>
                <field name="driver_ids" widget="many2many_tags"/>
                <field name="district_ids" widget="many2many_tags" string="Zones"/>
            </list>
        </field>
    </record>

    <record id="action_customer_zone" model="ir.actions.act_window">
        <field name="name">Districts</field>
        <field name="res_model">customer.zone</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Enter the Districts
            </p>
        </field>
    </record>
    
</odoo>