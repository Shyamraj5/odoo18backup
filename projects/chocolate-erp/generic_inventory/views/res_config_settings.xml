<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inventory</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='warehouse_setting_container']" position="after">
                <div class="app_settings_block" string="Show Actual Quantity for Picker">
                    <h2>Show Actual Quantity for Picker</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6">
                            <div class="o_setting_box">
                                    <label for="allowed_user_ids"/>
                                    <div class="text-muted">
                                        These users will have access to view actual quantities for pickers.
                                    </div><br/>
                                    <field name="allowed_user_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
