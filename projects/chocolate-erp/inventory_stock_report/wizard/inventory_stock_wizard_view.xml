<odoo>
    <record id="view_inventory_stock_excel_wizard_form" model="ir.ui.view">
        <field name="name">inventory.stock.wizard.form</field>
        <field name="model">inventory.stock.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Inventory Stock Report">
                <group>
                    <field name="end_date" required="1"/>
                </group>
                <footer>
                    <button string="Generate Report" type="object" name="generate_excel_report" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_inventory_stock_excel_wizard" model="ir.actions.act_window">
        <field name="name">Inventory Stock Report</field>
        <field name="res_model">inventory.stock.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_reporting_inventory_stock_report"
              name="Inventory Stock Report"
              parent="stock.menu_warehouse_report"
              action="action_inventory_stock_excel_wizard"
              sequence="50"/>
</odoo>