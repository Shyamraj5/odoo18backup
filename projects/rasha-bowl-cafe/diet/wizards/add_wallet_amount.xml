<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_add_received_amount_wizard" model="ir.ui.view">
        <field name="name">add.received.amount.wizard.form</field>
        <field name="model">add.received.amount.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Received Amount">
                <group>
                    <field name="referral_id" invisible="1"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="amount"/>
                    <field name="date"/>
                    <field name="wallet_type"/>
                    <field name="remark"/>
                </group>
                <footer>
                    <button string="Add" type="object" name="action_add_received_amount" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
</odoo>