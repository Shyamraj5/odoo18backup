<?xml version="1.0" encoding="utf-8"?>
<odoo>

      <record id="view_account_list_inherit" model="ir.ui.view">
        <field name="name">account.view_account_list.inherit</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_list"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="parent_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                <field name="account_group_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                <field name="account_sub_group_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
            </xpath>
        </field>
    </record>

    <!-- Modify Form View -->
    <record id="view_account_form_inherit" model="ir.ui.view">
        <field name="name">account.view_account_form.inherit</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <div class="row">
                    <label for="parent_id" string="Parent"/>
                    <div class="col col-md-8">
                        <field name="parent_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                    </div>
                </div>
                <div class="row">
                    <label for="account_group_id" string="Parent Group"/>
                    <div class="col col-md-8">
                        <field name="account_group_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                    </div>
                </div>
                <div class="row">
                    <label for="account_sub_group_id" string="Sub Group"/>
                    <div class="col col-md-8">
                        <field name="account_sub_group_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
