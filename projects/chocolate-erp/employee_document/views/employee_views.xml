<odoo>
    <record id="view_document_type_list" model="ir.ui.view">
        <field name="name">document.type.list</field>
        <field name="model">document.type</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
                <field name="alert" required="True"/>
            </list>
        </field>
    </record>

    <record id="action_document_type" model="ir.actions.act_window">
        <field name="name">Document Types</field>
        <field name="res_model">document.type</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first document type!
            </p>
        </field>
    </record>

    <menuitem 
        id="menu_document_type"
        name="Document Types"
        parent="hr.menu_config_employee"
        action="action_document_type"
        sequence="2"/>

    <record model="ir.ui.view" id="view_employee_form_inherit_document">
        <field name="name">hr.employee.form.inherit.document</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Documents Tracking">
                    <field name="document_tracking_ids">
                        <list string="Documents" editable="bottom">
                            <field name="document_type_id"/>
                            <field name="document_attachment" filename="document_type"/>
                            <field name="document_description"/>
                            <field name="start_date"/>
                            <field name="expiry_date"/>
                            <field name="status" 
                                decoration-info="status == 'draft'"
                                decoration-success="status == 'active'"
                                decoration-warning="status == 'expiry_soon'"
                                decoration-danger="status == 'expired'"/>
                        </list>
                    </field>
                </page>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Asset Info">
                    <field name="asset_ids">
                        <list>
                            <field name="name"/>
                            <field name="category_id"/>
                            <field name="name"/>
                            <field name="first_depreciation_manual_date"/>
                            <field name="account_analytic_id"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_document_tracking_list" model="ir.ui.view">
        <field name="name">document.tracking.list</field>
        <field name="model">document.tracking</field>
        <field name="arch" type="xml">
            <list string="Employee Documents">
                <field name="employee_id"/>
                <field name="document_type_id"/>
                <field name="document_attachment" widget="binary"/>
                <field name="document_number"/>
                <field name="document_description"/>
                <field name="start_date"/>
                <field name="expiry_date"/>
                <field name="status" widget="badge" 
                    decoration-info="status == 'draft'"
                    decoration-success="status == 'active'"
                    decoration-warning="status == 'expiry_soon'"
                    decoration-danger="status == 'expired'"/>                
            </list>
        </field>
    </record>

    <record id="view_document_tracking_form" model="ir.ui.view">
        <field name="name">document.tracking.form</field>
        <field name="model">document.tracking</field>
        <field name="arch" type="xml">
            <form string="Document Tracking">
                <header>
                    <field name="status" widget="statusbar" 
                        decoration-info="status == 'draft'"
                        decoration-success="status == 'active'"
                        decoration-warning="status == 'expiry_soon'"
                        decoration-danger="status == 'expired'"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="document_type_id"/>
                            <field name="document_attachment" widget="binary"/>
                            <field name="document_number"/>
                            <field name="document_description"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="expiry_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_document_tracking_search" model="ir.ui.view">
        <field name="name">document.tracking.search</field>
        <field name="model">document.tracking</field>
        <field name="arch" type="xml">
            <search string="Document Tracking Search">
                <field name="employee_id" string="Employee"/>
                <field name="document_type_id" string="Document Type"/>
                
                <filter name="draft_status" string="Draft" 
                    domain="[('status', '=', 'draft')]"/>
                <filter name="active_status" string="Active" 
                    domain="[('status', '=', 'active')]"/>
                <filter name="expiry_soon_status" string="Expiry Soon" 
                    domain="[('status', '=', 'expiry_soon')]"/>
                <filter name="expired_status" string="Expired" 
                    domain="[('status', '=', 'expired')]"/>
                
                <group expand="0" string="Group By">
                    <filter name="group_by_employee" string="By Employee" 
                        context="{'group_by': 'employee_id'}"/>
                    <filter name="group_by_document_type" string="By Document Type" 
                        context="{'group_by': 'document_type_id'}"/>
                    <filter name="group_by_status" string="By Status" 
                        context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_employee_document_views" model="ir.actions.act_window">
        <field name="name">Employee Document Views</field>
        <field name="res_model">document.tracking</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_document_tracking_list"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first document for an employee!
            </p>
        </field>
    </record>

    <menuitem
        name="Employee Document Views"
        id="menu_employee_view"
        parent="hr.menu_hr_root"
        action="action_employee_document_views"
        sequence="100"/>
</odoo>