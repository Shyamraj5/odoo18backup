<odoo>
    <record id="location_report_wizard_form" model="ir.ui.view">
        <field name="name">location.report.wizard.form</field>
        <field name="model">location.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Location Report">
                <group>
                    <field name="date_from" required="1" />
                    <field name="period_lenght" required="0" invisible="1"/>
                    <field name="target_move" widget="radio"/>
                    <field name="route_location" widget="many2many_tags" />
                </group>
                <footer>
                    <button string="Confirm" type="object" name="generate_excel_report" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_location_report_wizard" model="ir.actions.act_window">
        <field name="name">Location Report</field>
        <field name="res_model">location.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="location_report_menu"
              name="Location Report"
              parent="sale.menu_sale_report"
              action="action_location_report_wizard"
              sequence="50"/>
</odoo>
