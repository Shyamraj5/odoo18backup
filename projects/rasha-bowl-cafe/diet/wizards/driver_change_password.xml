<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="driver_change_password_wizard_view_form" model="ir.ui.view">
        <field name="name">driver.change.password.wizard.view.form</field>
        <field name="model">driver.change.password.wizard</field>
        <field name="arch" type="xml">
            <form string="Change Driver APP Password">
                <sheet>
                    <group>
                        <group>
                            <field name="driver_id" force_save="1" invisible="1"/>
                            <field name="new_password" required="1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Update Password" name="update_password" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
