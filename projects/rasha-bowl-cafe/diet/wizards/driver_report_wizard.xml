<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="driver_report_wizard_view" model="ir.ui.view">
        <field name="name">driver.report.wizard.view</field>
        <field name="model">driver.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Driver Delivery Daily Report Wizard">
                <group>
                    <group>
                        <field name="date"/>
                    </group>
                    <group>
                        <field name="driver_id"/>
                    </group>
                </group>
                <footer>
                    <button name="pdf_report" string="Print Pdf" type="object" class="btn-primary"/>
                    <button name="print_excel" string="Print Excel" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_driver_report_wizard" model="ir.actions.act_window">
        <field name="name">Driver Delivery Daily Report</field>
        <field name="res_model">driver.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>