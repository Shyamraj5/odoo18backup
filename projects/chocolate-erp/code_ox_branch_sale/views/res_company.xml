<odoo>
    <record id="view_res_company_inherit_branch_sale" model="ir.ui.view">
        <field name="name">res.company.branch.sale</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="branch_code" placeholder="Branch Code"/>
            </xpath>
        </field>
    </record>
</odoo>