<?xml version="1.0" encoding="utf-8"?>

<templates xml:space="preserve">

    <t t-name="codeox_vat_report.CustomJsVatReportView" owl="1">
        <div class="py-header">
            <nav class="navbar navbar-expand-lg bg-white">
                <div class="container-fluid align-items-center">

                    <div class="d-flex">
                        <a class="navbar-brand" href="#"><strong>VAT Report</strong></a>
                    </div>
                    <!-- DATE FILTER -->
                    <div class="d-flex flex-grow-1 justify-content-center align-items-center">
                        <div class="d-flex align-items-center mx-2">
                            <span class="d-flex align-items-center me-2"><i class="fa fa-calendar me-2"/>From</span>
                            <DateTimeInput
                                id="dateFrom"
                                type="'date'"
                                value="state.date_from"
                                onChange.bind="onDateFromChanged"
                                placeholder="fromPlaceholder"
                            />
                        </div>
                        <div class="d-flex align-items-center mx-2">
                            <span class="d-flex align-items-center me-2"><i class="fa fa-calendar me-2"/>To</span>
                            <DateTimeInput
                                id="dateTo"
                                type="'date'"
                                value="state.date_to"
                                onChange.bind="onDateToChanged"
                                placeholder="toPlaceholder"
                            />
                        </div>
                    </div>

                    <div class="d-flex">
                        <button class="btn btn-outline-primary" t-on-click.prevent="apply_filters" type="button">
                            Apply
                        </button>
                    </div>
                </div>
            </nav>
            <hr class="my-1" />
        </div>

