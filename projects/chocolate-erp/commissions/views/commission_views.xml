<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_commission_plan_list" model="ir.ui.view">
        <field name="name">commission.plan.list</field>
        <field name="model">commission.plan</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="effective_period_start"/>
                <field name="effective_period_end"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_commission_plan_form" model="ir.ui.view">
        <field name="name">commission.plan.form</field>
        <field name="model">commission.plan</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_approve" type="object" string="Approve" 
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_cancel" type="object" string="Cancel" 
                            class="btn-secondary"
                            invisible="state not in ('draft', 'approved')"/>
                    <button name="action_draft" type="object" string="Reset to Draft" 
                            class="btn-secondary"
                            invisible="state not in ('cancel', 'approved')"/>
                    <field name="state" widget="statusbar" options="{'clickable': False}" 
                        statusbar_visible="draft,approved,cancel"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_incentives" string="Incentives" type="object" icon="fa-money"/>
                    </div>
                    <group readonly="state != 'draft'">
                        <field name="name" readonly="state != 'draft'"/>
                        <label for="effective_period_start" string="Effective Period"/>
                        <div class="o_row">
                            <field name="effective_period_start" class="oe_inline" readonly="state != 'draft'"/> 
                            <span class="mx-3">â†’</span>
                            <field name="effective_period_end" class="oe_inline" readonly="state != 'draft'"/>
                        </div>
                        <field name="payment_frequency" readonly="state != 'draft'"/>
                    </group>
                    <notebook>
                        <page string="Sales People">
                            <field name="salesperson_ids">
                                <list editable="bottom">
                                    <field name="salesperson_id"/>
                                    <button name="set_target" invisible="is_target_set == True" type="object" icon="fa-bars" string="Set Target" class="text-primary"/>
                                    <button name="action_view_details" invisible="is_target_set == False" type="object" icon="fa-bars" string="View Target" class="text-primary"/>
                                </list>
                            </field>
                        </page>
                        <page string="Incentives">
                            <field name="incentive_ids">
                                <list editable="bottom">
                                    <field name="target_completion"/>
                                    <field name="commission_amount"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_commission_plans" model="ir.actions.act_window">
        <field name="name">Commission Plans</field>
        <field name="res_model">commission.plan</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_commission_plan_salesperson_form" model="ir.ui.view">
        <field name="name">commission.plan.salesperson.form</field>
        <field name="model">commission.plan.salesperson</field>
        <field name="arch" type="xml">
            <form string="Commission Plan Salesperson">
                <sheet>
                    <group>
                        <field name="salesperson_id" readonly="1"/>
                        <field name="commission_plan_id" readonly="1"/>
                        <field name="is_target_set" invisible="1"/>
                    </group>
                    <notebook>
                        <page string="Target Lines">
                            <field name="target_line_ids" widget="one2many_list">
                                <list editable="bottom" create='0'>
                                    <field name="period_name"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="target_amount"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
