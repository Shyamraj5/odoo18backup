<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_purchase_return_round_off_wizard" model="ir.actions.act_window">
        <field name="name">Round-off</field>
        <field name="res_model">purchase.return.round.off</field>
        <field name="view_mode">form</field>
        <field name="target">new</field> 
    </record>

    <record id="view_purchase_return_round_off_form" model="ir.ui.view">
        <field name="name">purchase.return.round.off.form</field>
        <field name="model">purchase.return.round.off</field>
        <field name="arch" type="xml">
            <form string="Round-off">
                <sheet>
                    <group>
                        <field name="round_off_amount"/>
                    </group>
                    <footer>
                        <button string="Confirm" type="object" name="apply_round_off" class="oe_highlight"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>