<odoo>
    <record id="view_product_offer_form" model="ir.ui.view">
        <field name="name">product.offer.form</field>
        <field name="model">product.offer</field>
        <field name="arch" type="xml">
            <form string="Product Offer">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="product_id"/>
                        <field name="discount_percentage"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_product_offer_tree" model="ir.ui.view">
        <field name="name">product.offer.tree</field>
        <field name="model">product.offer</field>
        <field name="arch" type="xml">
            <list string="Product Offers">
                <field name="name"/>
                <field name="product_id"/>
                <field name="discount_percentage"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="action_product_offer" model="ir.actions.act_window">
        <field name="name">Product Offer</field>
        <field name="res_model">product.offer</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>
                Manage Product Offers
            </p>
        </field>
    </record>

    <menuitem id="product_offer_menu" name="Product Offers" parent="sale.sale_menu_root" sequence="10"/>
    <menuitem id="product_offer_menu_item" name="Offers" parent="product_offer_menu" action="action_product_offer"/>

</odoo>
