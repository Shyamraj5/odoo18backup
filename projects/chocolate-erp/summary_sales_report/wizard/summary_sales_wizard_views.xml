<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_summary_sales_excel_wizard_form" model="ir.ui.view">
        <field name="name">summary.sales.wizard.form</field>
        <field name="model">summary.sales.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Summary Sales Report">
                <group>
                    <field name="month" />
                    <field name="year" />
                </group>
                <footer>
                    <button string="Generate Report" type="object" name="generate_excel_report" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_summary_sales_excel_wizard" model="ir.actions.act_window">
        <field name="name">Summary Sales Report</field>
        <field name="res_model">summary.sales.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_reporting_summary_sales_report"
              name="Summary Sales Report"
              parent="sale.menu_sale_report"
              action="action_summary_sales_excel_wizard"
              sequence="60"/>
</odoo>