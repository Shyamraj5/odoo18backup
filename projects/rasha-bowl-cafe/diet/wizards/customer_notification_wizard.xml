<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="customer_notification_wizard_view_form" model="ir.ui.view">
        <field name="name">customer.notification.wizard.view</field>
        <field name="model">customer.notification.wizard</field>
        <field name="arch" type="xml">
            <form>
                <p>Placeholder: <b>EN_FIRSTNAME / AR_FIRSTNAME</b></p>
                <group>
                    <group>
                        <field name="title"/>
                        <field name="description"/>
                        <field name="customer_id" invisible="1"/>
                    </group>
                    <group>
                        <field name="photo" widget="image" options='{"preview_image": "avatar_128"}'/>
                    </group>
                </group>
                <footer>
                    <button string="Submit" name="action_submit" type="object" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_customer_notification_wizard" model="ir.actions.act_window">
        <field name="name">Customer notification Wizard</field>
        <field name="res_model">customer.notification.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>