<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_bank_summary_wizard" model="ir.ui.view">
        <field name="name">bank.summary.wizard.form</field>
        <field name="model">bank.summary.wizard</field>
        <field name="arch" type="xml">
            <form string="Bank Summary Report">
                <group>
                    <group>
                        <field name="target_move" widget="radio"/>
                    </group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="account_ids" widget="many2many_tags" invisible="0"/>
                        <field name="journal_ids" widget="many2many_tags"/>
                    </group>
                </group>
                <footer>
                    <button name="print_bank_report" string="Generate Report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


     <record id="action_company_balance_wizard" model="ir.actions.act_window">
        <field name="name">Bank Summary Report</field>
        <field name="res_model">bank.summary.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_company_balance_report"
              name="Bank Summary Report"
              parent="account.menu_finance_reports"
              action="action_company_balance_wizard"
              sequence="21"/>


</odoo>