<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_axcept_payment_method_tree" model="ir.ui.view">
            <field name="name">axcept.payment.method.tree</field>
            <field name="model">axcept.payment.method</field>
            <field name="arch" type="xml">
                <list string="Payment Methods">
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="view_axcept_payment_method_form" model="ir.ui.view">
            <field name="name">axcept.payment.method.form</field>
            <field name="model">axcept.payment.method</field>
            <field name="arch" type="xml">
                <form string="Axcept Payment Methods">
                    <group>
                        <field name="name" required="1"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_axcept_payment_method" model="ir.actions.act_window">
            <field name="name">Axcept Payment Method</field>
            <field name="res_model">axcept.payment.method</field>
            <field name="view_mode">list,form</field> 
        </record>


        <!-- Menu -->
        <menuitem id="menu_axcept_root"
                  name="Axcept Payment"
                  parent="account.menu_finance_configuration"
                  sequence="25" />

        <menuitem id="menu_axcept_payment_method" 
                  name="Axcept Payment Method" 
                  action="action_axcept_payment_method" 
                  parent="menu_axcept_root" 
                  sequence="10"/>

    </data>
</odoo>
