<odoo>
    <data>
        <record model="ir.ui.view" id="view_move_form_inherit">
            <field name="model">account.move</field>
            <field name="name">account.move.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ref']" position="after">
                    <field string="Payments" name="account_payment_count"/>
                    <field name="is_paid" invisible="1"/>
                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button"
                            name="action_view_account_payment"
                            type="object"
                            invisible="move_type != 'in_invoice' or account_payment_count ==0"
                            icon="fa-pencil-square-o">
                        <field string="Payments" name="account_payment_count" widget="statinfo"/>
                    </button>
                </xpath>
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <!--  -->
                <xpath expr="//button[@name='action_register_payment']" position="attributes">
                    <attribute name="groups">account.group_account_manager</attribute>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_invoice_tree_inherit">
            <field name="model">account.move</field>
            <field name="name">account.move.inherit</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_force_register_payment']" position="attributes">
                    <attribute name="groups">account.group_account_manager</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
