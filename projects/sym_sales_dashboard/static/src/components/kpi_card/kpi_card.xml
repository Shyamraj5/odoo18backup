<?xml version="1.0" encoding="utf-8"?>


    <templates> 
        <t t-name="sym_sales_dashboard.KpiCard" owl="1">
            <div class="col-lg-3 m-0 p-0">
                <div class="shadow-sm border m-2 p-4 bg-white text-center">
                   <div class="h1 fw-bold text-dark "><span t-esc="props.value"/></div>
                   <div class="h3 text-muted"><span t-esc="props.name"></span></div>
                   <div class="h3 mt-5">
                    <span t-attf-class="text-#{ 10 > 0 ? 'success':'danger'}">
                        <span t-attf-class="me-1 fa fa-arrow-#{ 10 > 0 ? 'up': 'down'}">
                            <span class="" t-esc="props.percentage"/>%
                            <span class="">since last period</span>
                        </span>
                    </span>
                   </div>
                </div>  

            </div>
        </t>
    </templates>
