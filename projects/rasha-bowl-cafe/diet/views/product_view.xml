<odoo>
    <data>
        <record id="view_inherit_product_form" model="ir.ui.view">
            <field name="name">inherit.product.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_title')]" position="after">
                    <group>
                        <group>
                            <field name="meal_description"/>
                            <field name="meal_category_id" widget="many2many_tags" options="{'color_field': 'color'}" invisible="is_ingredient" />
                            <field name="kitchen_type"/>
                            <field name="start_date" />
                            <field name="end_date" />
                        </group>
                        <group>
                            <field name="ingredient_category_id" invisible="not is_ingredient"/>
                        </group>
                    </group>
                </xpath>
                <xpath expr="//notebook/page[@name='general_information']//field[@name='type']" position="after">
                    <field name="is_ingredient" invisible="1"/>
                    <field name="is_meal" invisible="1"/>
                    <field name="is_semi_cooked"  invisible="is_meal" />
                    <field name="is_plan" invisible="1" force_save="1"/>
                    <field name="brand_id" options="{'no_create':1,'no_create_edit':1}" invisible="not is_ingredient"/>
                </xpath>
                <page name="general_information" position="after">
                    <page name="calorie_details" string="Nutritional Values">
                        <group string="Nutritional Values">
                            <group>
                                <group>
                                    <field name="protein"/>
                                    <field name="carbohydrates"/>
                                    <field name="calories" force_save="1"/>
                                </group>
                            </group>
                        </group>
                    </page>
                </page>
                <xpath expr="//field[@name='type']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                 <xpath expr="//field[@name='invoice_policy']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='taxes_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='product_tag_ids']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='categ_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='product_tag_ids']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//page[@name='purchase']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//page[@name='sales']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
        
        <record id="view_hide_kitchen_type_form" model="ir.ui.view">
            <field name="name">inherit.product.hide.kitchen.type.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='kitchen_type']" position="attributes">
                    <attribute name="invisible">is_ingredient</attribute>
                </xpath>
            </field>
        </record>
        
        <!-- HIDE field product_tooltip -->
        <record id="product_template_form_view" model="ir.ui.view">
            <field name="name">product.template.form.view.inherit.sale</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <field name="product_tooltip" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <!-- <div class="fst-italic text-muted" position="attributes">
                    <attribute name="invisible">1</attribute>
                </div> -->
                <xpath expr="//notebook/page[@name='general_information']//field[@name='product_tooltip']" position="after">
                    <field name="tag" invisible="1"/>
                    <field name="app_right_tag" invisible="1"/>
                    <field name="label_title" invisible="1"/>
                    <field name="label_sub_title" invisible="1"/>
                    <field name="kitchen_report" invisible="1"/>
                    <field name="can_change_plan" invisible="1"/>
                    <field name="is_from_menu" invisible="1"/>
                </xpath>
                <xpath expr="//notebook/page[@name='general_information']//group[1]" position="after">
                    <group>
                            <field name="tag_information_ids" invisible="1">
                                    <list editable="top" string="Lines">
                                        <field name="tag"/>
                                        <field name="type"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                    </list>
                            </field>
                    </group>
                </xpath>
                <xpath expr="//notebook/page[@name='general_information']" position="after">
                    <page string='Ingredients' name="ingredients">
                        <field name="ingredients_line_ids">
                            <list string="Meal Informations" editable="bottom">
                                <field name="ingredient_id" options="{'no_create': True, 'no_create_edit':True}"/> 
                                <field name="quantity"/>
                                <field name="product_uom"/>
                                <field name="is_main_ingredient" width="40%" />
                                <field name="dislikable" width="30%"/>
                                <field name="price" sum="Total"/>
                            </list>
                        </field>
                    </page>
                    
                </xpath>
                <xpath expr="//notebook/page[@name='invoicing']" position="after">
                    <page string='App Settings' name="app_settings"  invisible="is_ingredient" >
                        <group>
                            <group>
                                <field name="is_ingredient" invisible="1"/>
                                <field name="is_invisible_in_app"/>
                                <field name="offer_name" />
                                <field name="sequence_in_app" />
                                <field name="app_dislike_attributes" />
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        
        <record id="view_inherit_products_form" model="ir.ui.view">
            <field name="name">inherit.products.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                 <xpath expr="//field[@name='invoice_policy']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='taxes_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='categ_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='product_tag_ids']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//page[@name='purchase']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <record id="ingredient_product_template_action_product" model="ir.actions.act_window">
            <field name="name">Ingredients</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="domain">[]</field>
            <field name="context">{'default_is_ingredient': True}</field>
        </record>

        <record id="stock.product_template_action_product" model="ir.actions.act_window">
            <field name="name">Ingredients</field>
            <field name="domain">[]</field>
            <field name="context">{'default_is_ingredient': True}</field>
        </record>

