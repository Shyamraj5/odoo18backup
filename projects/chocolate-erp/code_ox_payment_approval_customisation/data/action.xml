<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_vendor_payment_bulk_pending" model="ir.actions.server">
        <field name="name">Pending</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="binding_model_id" ref="account.model_account_payment"/>
        <field name="sequence">1</field>
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.bulk_order_approval_pending()
        </field>
    </record>

    <record id="action_vendor_payment_bulk_authorize" model="ir.actions.server">
        <field name="name">Authorize</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="binding_model_id" ref="account.model_account_payment"/>
        <field name="sequence">2</field>
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.bulk_order_approval_authorize()
        </field>
    </record>

    <record id="action_vendor_payment_bulk_approval" model="ir.actions.server">
        <field name="name">Approve</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="binding_model_id" ref="account.model_account_payment"/>
        <field name="sequence">3</field>
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.bulk_order_approval_approve()
        </field>
    </record>

</odoo>
