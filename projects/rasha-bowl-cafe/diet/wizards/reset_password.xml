<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="reset_password_wizard_view_form" model="ir.ui.view">
        <field name="name">reset.password.wizard.view</field>
        <field name="model">reset.password.wizard</field>
        <field name="arch" type="xml">
            <form>
                <div class="o_row">
                    <label for="password" string="New Password"/>
                    <field name ="password"/>
                    <button string="Generate" type="object" name="generate_password" class="oe_inline oe_highlight"/>
                </div>
                <group>
                    <field name = "send_by_sms"/>
                    <field name ="customer_id" invisible="1"/>
                </group>
                <footer>
                    <button string="Save" class="oe_highlight" type="object" name="reset_password" />                
                </footer>
            </form>
        </field>
    </record>

    <record id="action_reset_password_wizard" model="ir.actions.act_window">
        <field name="name">Reset password wizard</field>
        <field name="res_model">reset.password.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>