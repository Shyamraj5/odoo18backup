<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_purchase" model="ir.module.category">
        <field name="name">Purchase Mode</field>
        <field name="description">Helps you handle your local and import purchase.</field>
        <field name="sequence">9</field>
    </record>

    <record id="group_local_purchase" model="res.groups">
        <field name="name">Local Purchase</field>
        <field name="category_id" ref="module_category_purchase"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">The user will be able to do local purchase.</field>
    </record>

    <record id="group_import_purchase" model="res.groups">
        <field name="name">Import Purchase</field>
        <field name="comment">The user will be able to do import purchase</field>
        <field name="category_id" ref="module_category_purchase"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_rfq_user" model="res.groups">
        <field name="name">RFQ User</field>
        <field name="category_id" ref="base.module_category_inventory_purchase"/>
    </record>

    <record id="rule_purchase_order_rfq_user" model="ir.rule">
        <field name="name">RFQ User: Only RFQs</field>
        <field name="model_id" ref="purchase.model_purchase_order"/>
        <field name="domain_force">[('state', 'in', ['draft', 'sent', 'to approve'])]</field>
        <field name="groups" eval="[(4, ref('group_rfq_user'))]"/>
    </record>
</odoo>
