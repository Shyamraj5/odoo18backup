<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_purchase_round_off_wizard" model="ir.ui.view">
        <field name="name">purchase.round.off.wizard.form</field>
        <field name="model">purchase.round.off.wizard</field>
        <field name="arch" type="xml">
            <form string="Round Off">
                <group>
                    <field name="round_off_amount"/>
                </group>
                <footer>
                    <button name="apply_round_off" type="object" string="Apply" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_purchase_round_off_wizard" model="ir.actions.act_window">
        <field name="name">Round Off</field>
        <field name="res_model">purchase.round.off.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
