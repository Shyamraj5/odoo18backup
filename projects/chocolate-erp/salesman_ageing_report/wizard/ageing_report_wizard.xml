<odoo>
    <record id="salesman_ageing_report_wizard_form" model="ir.ui.view">
        <field name="name">salesman.ageing.report.wizard.form</field>
        <field name="model">salesman.ageing.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Salesman Ageing Report">
                <group>
                    <field name="date_from" required="1" />
                    <field name="period_lenght" required="0" invisible="1"/>
                    <field name="target_move" widget="radio"/>
                    <field name="customer_ids" 
                        widget="many2many_tags"
                        required="0"
                        options="{'no_open': True, 'no_create_edit': True, 'no_create': True}"
                        domain="[('user_ids', '=', False)]"/>
                    <field name="salesman_ids" 
                        widget="many2many_tags"
                        required="0"
                        options="{'no_open': True, 'no_create_edit': True, 'no_create': True}"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="generate_excel_report" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_salesman_ageing_report_wizard" model="ir.actions.act_window">
        <field name="name">Salesman Ageing Report</field>
        <field name="res_model">salesman.ageing.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="salesman_ageing_report_menu"
              name="Salesman Ageing Report"
              parent="sale.menu_sale_report"
              action="action_salesman_ageing_report_wizard"
              sequence="50"/>

</odoo>