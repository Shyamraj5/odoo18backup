<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="view_van_detail_form" model="ir.ui.view">
        <field name="name">van.detail.form</field>
        <field name="model">van.detail</field>
        <field name="arch" type="xml">
            <form string="Van Details">
                <sheet>
                    <group>
                        <field name="name" required="True"/>
                        <field name="model" />
                        <field name="reg_number" required="True"/>
                        <field name="company_id" string="Van Branch" options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_van_detail_list" model="ir.ui.view">
        <field name="name">van.detail.list</field>
        <field name="model">van.detail</field>
        <field name="arch" type="xml">
            <list string="Van Details">
                <field name="name" />
                <field name="model" />
                <field name="reg_number" />
                <field name="company_id" string="Van Branch"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_van_detail" model="ir.actions.act_window">
        <field name="name">Van Details</field>
        <field name="res_model">van.detail</field>
        <field name="view_mode">list,form</field>
    </record>

   



</odoo>
