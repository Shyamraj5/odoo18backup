<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="driver_change_wizard_view_form" model="ir.ui.view">
        <field name="name">driver.change.wizard.view.form</field>
        <field name="model">driver.change.wizard</field>
        <field name="arch" type="xml">
            <form string="Change Driver">
                <sheet>
                    <group>
                        <group>
                            <field name="driver_order_ids" invisible="1" force_save="1"/>
                            <field name="driver_id" options="{'no_create':1, 'no_create_edit':1}"/>
                            <field name="shift_id" options="{'no_create':1, 'no_create_edit':1}"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="change_driver" string="Change Driver/Shift" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>