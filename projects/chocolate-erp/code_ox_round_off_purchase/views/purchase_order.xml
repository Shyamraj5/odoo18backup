<odoo>
    <data>
        <record id="purchase_order_form_inherit_discount" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.roundoff</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_open_discount_wizard']" position="after">
                    <div name="Po_button_below_order_lines">
                        <button string="Round Off" name="action_open_round_off_wizard" type="object"
                                class="btn btn-secondary" invisible="invoice_count != 0"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>