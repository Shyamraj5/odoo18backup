<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_move_inherit_generic" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit.generic</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='price_total']" position="attributes">
                <attribute name="column_invisible">0</attribute>
                <attribute name="string">Grand Total</attribute>
                <attribute name="sum">Total</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='price_subtotal']" position="attributes">
                <attribute name="string">Gross Total</attribute>
                <attribute name="sum">Total</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='account_id']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='analytic_distribution']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='discount']" position="after">
                <field name="discount_amount" force_save="1" readonly="1" sum="Total"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='quantity']" position="attributes">
                <attribute name="sum">Total</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='price_total']" position="before">
                <field name="price_tax" force_save="1" readonly="1" string="VAT" sum="Total"/>
            </xpath>
            <xpath expr="//field[@name='quick_edit_total_amount']" position="after">
                <field name="vendor_code" string="Vendor Code" invisible="move_type not in ('in_invoice', 'in_refund', 'in_receipt')"/>
                <field name="customer_code" string="Customer Code" invisible="move_type not in ('out_invoice', 'out_refund', 'out_receipt')"/>
            </xpath>
        </field>
    </record>
</odoo>
