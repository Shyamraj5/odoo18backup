<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="inherit_ip_pos_config_view_form" model="ir.ui.view">
            <field name="name">pos.config.view.form.inherit.ip</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('o_settings_container')][1]" position="after">
                    <div class="col-12 col-lg-6 o_setting_box" title="Default Order Type in POS Order.">
                        <div class="o_setting_right_pane">
                            <label for="default_order_type_id"/>
                            <div class="text-muted">
                                Default Order Type.
                            </div>
                            <div class="content-group mt16">
                                <field name="default_order_type_id" colspan="4" nolabel="1"/>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box" title="Printer URL.">
                        <div class="o_setting_right_pane">
                            <label for="use_custom_kot_printing"/>
                            <div class="text-muted">
                                Flask KoT Print
                            </div>
                            <div class="content-group mt16">
                                <field name="use_custom_kot_printing" colspan="4" nolabel="1"/>
                            </div>
                            <label for="flask_endpoint_url"/>
                            <div class="text-muted">
                                Flask End Point
                            </div>
                            <div class="content-group mt16">
                                <field name="flask_endpoint_url" colspan="4" nolabel="1"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>