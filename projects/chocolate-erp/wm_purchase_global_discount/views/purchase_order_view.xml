<odoo>
    <data>
        <record id="purchase_order_form_inherit_discount" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.discount</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook//page[@name='products']//field[@name='order_line']//list//field[@name='discount']"
                       position="attributes">
                    <attribute name="optional">show</attribute>
                </xpath>
                <xpath expr="//notebook//page[@name='products']//field[@name='order_line']" position="after">
                    <group>
                        <div class="float-end d-flex gap-1 mb-2" name="Po_button_below_order_lines">
                            <button string="Discount" name="action_open_discount_wizard" type="object"
                                    class="btn btn-secondary" invisible="invoice_count != 0"/>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>