<odoo>
    <data>
        <record id="view_picker_assign_form" model="ir.ui.view">
            <field name="name">picker.assign.form</field>
            <field name="model">stock.picking.picker.assign</field>
            <field name="arch" type="xml">
                <form string="Assign Picker">
                    <group>
                        <group>
                            <field name="picker_id"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Assign" type="object" name="assign_picker" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>