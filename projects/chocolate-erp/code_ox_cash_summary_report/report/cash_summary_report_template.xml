<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="cash_summary_report">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Cash Summary Report</h2>
                    <div class="row mb-4">
                        <div class="col-6">
                            <strong>Date From:</strong> 
                            <span t-esc="date_from" t-options='{"widget": "date"}'/>
                        </div>
                        <div class="col-6">
                            <strong>Date To:</strong> 
                            <span t-esc="date_to" t-options='{"widget": "date"}'/>
                        </div>
                    </div>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Company</th>
                                <th class="text-right">Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="balances" t-as="company_data">
                                <tr>
                                    <td><span t-esc="company_data['company_name']"/></td>
                                    <td class="text-right">
                                        <span t-esc="company_data['balance']" 
                                              t-options='{"widget": "monetary", "display_currency": env["res.currency"].browse(company_data["currency_id"])}'/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>