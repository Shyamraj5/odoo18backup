<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="subscription_plan_choice_view_form" model="ir.ui.view">
        <field name="name">subscription.plan.choice.view.form</field>
        <field name="model">subscription.plan.choice</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="plan_id" readonly="1"/>
                            <field name="day_count" />
                            <field name="currency_id" invisible="1"/>
                            <field name="price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="category_count" string="Product Category">
                            <field name="meal_category_line_ids">
                                <list editable="bottom">
                                    <field name="meal_category_id" />
                                    <field name="additional_add_price" string="Additional Meal Price" width="20%"/>
                                    <field name="additional_remove_price" string="Removal Meal Price" width="20%" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="subscription_plan_choice_view_tree" model="ir.ui.view">
        <field name="name">subscription.plan.choice.view.list</field>
        <field name="model">subscription.plan.choice</field>
        <field name="arch" type="xml">
            <list string="">
                <field name="name" />
            </list>
        </field>
    </record>

    <record id="subscription_plan_choice_action" model="ir.actions.act_window">
        <field name="name">Subscription Plan Choices</field>
        <field name="res_model">subscription.plan.choice</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
