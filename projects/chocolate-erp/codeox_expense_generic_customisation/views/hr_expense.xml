<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_expense.menu_hr_expense_root" model="ir.ui.menu">
        <field name="name">Reimbursements</field>
    </record>

    <record id="hr_expense_inherit" model="ir.ui.view">
        <field name="name">hr.expense.view.list.inherit</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="kilometer"/>
            </xpath>
        </field>
    </record>
    

</odoo>
