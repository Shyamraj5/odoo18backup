<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_order_type_view_form" model="ir.ui.view">
        <field name="name">pos.order.type.view.form</field>
        <field name="model">pos.order.type</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pos_order_type_view_list" model="ir.ui.view">
        <field name="name">pos.order.type.view.list</field>
        <field name="model">pos.order.type</field>
        <field name="arch" type="xml">
            <list string="">
                <field name="name" />
            </list>
        </field>
    </record>

    <record id="action_pos_order_type" model="ir.actions.act_window">
        <field name="name">POS Order Type</field>
        <field name="res_model">pos.order.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="pos_order_type_menu"
        name="Order Type"
        action="action_pos_order_type"
        parent="point_of_sale.menu_point_config_product"
        sequence="10"/>
</odoo>