<odoo>
    <record id="view_product_form_generic" model="ir.ui.view">
        <field name="name">product.product.form.generic</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="attributes">
                <attribute name="string">Product Code</attribute>
            </xpath>
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="product_uom_ids" options="{'no_create': True, 'no_open': True, 'no_edit': True}" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

    <record id="view_product_list_generic" model="ir.ui.view">
        <field name="name">product.product.list.generic</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="attributes">
                <attribute name="string">Product Code</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_product_template_form_generic" model="ir.ui.view">
        <field name="name">product.template.form.generic</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="attributes">
                <attribute name="string">Product Code</attribute>
            </xpath>
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="product_uom_ids" options="{'no_create': True, 'no_open': True, 'no_edit': True}" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

    <record id="view_product_template_list_generic" model="ir.ui.view">
        <field name="name">product.template.list.generic</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="attributes">
                <attribute name="string">Product Code</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_product_product_form_generic" model="ir.ui.view">
        <field name="name">product.template.form.generic</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="attributes">
                <attribute name="string">Product Code</attribute>
            </xpath>
        </field>
    </record>
</odoo>