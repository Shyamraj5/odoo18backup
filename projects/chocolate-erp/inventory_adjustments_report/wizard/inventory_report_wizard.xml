<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inventory_report_wizard_form" model="ir.ui.view">
        <field name="name">inventory.report.wizard.form</field>
        <field name="model">inventory.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Inventory Report">
                <group>
                    <field name="date_from" required="1" />
                    <field name="date_to" required="1" />
                    <field name="stock_location_id" />
                </group>
                <footer>
                    <button string="Generate Report" type="object" name="generate_excel_report" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_inventory_report_wizard" model="ir.actions.act_window">
        <field name="name">Inventory Adjustments Report</field>
        <field name="res_model">inventory.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="inventory_report_menuitem"
              name="Inventory Adjustments Report"
              parent="stock.menu_warehouse_report"
              action="action_inventory_report_wizard"
              sequence="50"/>

</odoo>
