<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_custom" model="ir.ui.view">
        <field name="name">res.partner.business.owner</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='l10n_in_pan']" position="after">
                <field name="is_bo"/>
                <field name="bo_code" required="is_bo" invisible="not is_bo"/>
            </xpath>
        </field>
    </record>
    <record id="view_res_partner_filter_inherit" model="ir.ui.view">
        <field name="name">res.partner.search.inherit.business_roles</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter string="Business Owner" name="business_owner" domain="[('is_bo', '=', True)]"/>
                <field name="bo_code"/>
            </xpath>
        </field>
    </record>
</odoo>
