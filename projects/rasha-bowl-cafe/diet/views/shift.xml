<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="customer_shift_form" model="ir.ui.view">
        <field name="name">customer.shift.form</field>
        <field name="model">customer.shift</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="shift"/>
                            <field name="is_default" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="customer_shift_tree" model="ir.ui.view">
        <field name="name">customer.shift.list</field>
        <field name="model">customer.shift</field>
        <field name="arch" type="xml">
            <list>
                <field name="zone_id"/>
                <field name="morning_driver_id"/>
                <field name="evening_driver_id"/>
                <field name="shift"/>
            </list>
        </field>
    </record>

    <record id="action_customer_shift" model="ir.actions.act_window">
        <field name="name">Shifts</field>
        <field name="res_model">customer.shift</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Enter the Shifts
            </p>
        </field>
    </record>
    
</odoo>