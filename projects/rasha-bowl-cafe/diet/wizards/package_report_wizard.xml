<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_report_package_report_xlsx" model="ir.actions.report">
        <field name="name">Package Report Excel</field>
        <field name="model">package.report.wizard</field>
        <field name="report_type">xlsx</field>
        <field name="report_name">diet.package_report_excel</field>
        <field name="report_file">diet.package_report_excel</field>
        <field name="print_report_name">'Package Report'</field>
    </record>

    <record id="package_report_wizard_view_form" model="ir.ui.view">
        <field name="name">package.report.wizard.view.form</field>
        <field name="model">package.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Package Report">
                <sheet/>
                <footer>
                    <button string="View" name="view_package_report" type="object" class="oe_highlight"/>
                    <button string="Export" name="export_package_report" type="object" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="package_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Package Report</field>
        <field name="res_model">package.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
