<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_sale_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sale_type']" position="after">
                <field name="source_location_id" 
                    domain="[('usage', '=', 'internal')]"
                    help="Internal Locations"
                    readonly="state in ['sale']"
                    />
            </xpath>
            <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/list/field[@name='product_template_id']"
                   position="after">
                 <field name="location_domain" force_save="1" column_invisible="1"/>
                <field name="location_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}" domain="location_domain"/>
            </xpath>
        </field>
    </record>
</odoo>
