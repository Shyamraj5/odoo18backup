<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_payment_inherit_approval" model="ir.ui.view">
        <field name="name">account.payment.view.form.approval</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_post']" position="after">
                <button string="Approve" groups="account.group_account_manager" name="approve_payment" type="object" class="oe_highlight" invisible="state != 'draft'"/>
            </xpath>
            <xpath expr="//button[@name='action_post']" position="attributes">
                <attribute name="invisible">state != 'approved'</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_account_payment_search_inherit" model="ir.ui.view">
        <field name="name">account.payment.search.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='state_in_process']" position="after">
                <filter string="Approved" name="state_in_approved" domain="[('state', '=', 'approved')]"/>
            </xpath>
        </field>
    </record>
</odoo>
