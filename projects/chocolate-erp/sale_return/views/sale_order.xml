<odoo>

    <record id="sale_order_view_form_inherit_sale_return" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit.sale.return</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="open_sale_return" type="object" class="oe_stat_button" icon="fa-undo"
                        invisible="sale_return_count &lt; 1">
                    <field name="sale_return_count" string="Returns" widget="statinfo"/>
                </button>
            </xpath>
            <xpath expr="//header" position="inside">
                <button string="Create Return" name="create_return" type="object"
                        invisible="state not in ['sale', 'done']"/>
            </xpath>
        </field>
    </record>

</odoo>
