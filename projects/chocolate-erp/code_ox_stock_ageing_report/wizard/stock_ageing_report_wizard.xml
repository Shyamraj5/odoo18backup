<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stock_ageing_report_wizard" model="ir.ui.view">
        <field name="name">stock.ageing.report.wizard</field>
        <field name="model">stock.ageing.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Stock Ageing Report">
                <group>
                    <field name="warehouse_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                    <field name="product_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                    <field name="date" required="1"/>
                </group>
                <footer>
                    <button name="print_report" string="Print" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_stock_ageing_report_wizard" model="ir.actions.act_window">
        <field name="name">Stock Ageing Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.ageing.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_stock_ageing_report_wizard"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_stock_ageing_report" 
            name="Stock Ageing Report" 
            parent="stock.menu_warehouse_report" 
            action="action_stock_ageing_report_wizard"
            sequence="10"/>

</odoo>
